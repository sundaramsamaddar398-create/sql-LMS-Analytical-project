-- ======================================================
-- 18. Find the Assessment with the Highest Average Score
-- ======================================================

Select
	a.assessment_id,
	a.assessment_name,
	Avg(a_su.score) As average_score_per_assessment
From assessment_submission As a_su
Inner Join assessments As a
On a_su.assessment_id = a.assessment_id
Group By a.assessment_id;
